{% extends 'base.html.j2' %}

{% block title %}
HomePage
{% endblock %}

{% block ss %}
<link rel="stylesheet" href="{{url_for('static', filename='/css/index.css')}}">
{% endblock %}


{% block content %}

<div class="sidebar">
    <h1 class="search">Nezuko's Box Stand</h1>
    <form action="{{url_for('main.index')}}" id="search-form" method="POST">
        {{ form.hidden_tag() }}
        <br>
    <div class="row mb-3">
        {{ form.character_name.label(class="form-label")}}
        <div class="col-sm-10">
        {{ form.character_name(class="form-label")}}
            {% for error in form.character_name.errors %}
                <small style="color:red;">{{ error }}</small>
            {% endfor %}
        </div>
    </div>
        <br>
        {{ form.submit(class="btn btn-danger form-label")}}
            <small style="color:red;">{{ error }}</small>
    </form>
</div>
<br>
<br>
<div class="category-list">
<h4>Demon Slayer characters we currently stock</h4>
<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center col-sm-5">
    Nezuko
    <span class="badge bg-warning text-dark rounded-pill">2</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center col-sm-5">
    Giyu
    <span class="badge bg-warning text-dark rounded-pill">2</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center col-sm-5">
    Tanjiro
    <span class="badge bg-warning text-dark rounded-pill">2</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center col-sm-5">
    Rengoku
    <span class="badge bg-warning text-dark rounded-pill">2</span>
  </li>
</ul>
</div>
{% endblock %}

